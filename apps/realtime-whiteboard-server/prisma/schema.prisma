datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Room {
  board        Board?        @relation(fields: [boardId], references: [id])
  boardId      String?
  createdAt    DateTime      @default(now())
  id           String        @id @default(cuid())
  messages     Message[]
  name         String?
  participants Participant[]
  updatedAt    DateTime      @updatedAt
}

model Board {
  boardOwner  String?
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  name        String?
  owner       String?
  rooms       Room[]
  updatedAt   DateTime @updatedAt
}

model Participant {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  room      Room?    @relation(fields: [roomId], references: [id])
  roomId    String?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Message {
  content       String?
  createdAt     DateTime @default(now())
  id            String   @id @default(cuid())
  messageSender String?
  room          Room?    @relation(fields: [roomId], references: [id])
  roomId        String?
  sender        String?
  updatedAt     DateTime @updatedAt
}

model User {
  createdAt    DateTime      @default(now())
  email        String?       @unique
  firstName    String?
  id           String        @id @default(cuid())
  lastName     String?
  participants Participant[]
  password     String
  roles        Json
  updatedAt    DateTime      @updatedAt
  username     String        @unique
}
